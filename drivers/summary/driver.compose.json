{
  "name": {
    "en": "HPS - Statistics",
    "de": "HKW - Statistiken"
  },
  "class": "sensor",
  "capabilities": [
    "date_range",
    "measure_pv_summary",
    "measure_house_consumption_summary",
    "measure_grid_in",
    "measure_grid_out",
    "measure_battery_in",
    "measure_battery_out",
    "measure_autarky",
    "measure_self_consumption"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "connect",
      "navigation": {
        "next": "list_my_devices"
      }
    },
    {
      "id": "list_my_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_my_devices",
        "prev": "connect"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "add_my_devices",
      "template": "add_devices"
    }
  ]
}
